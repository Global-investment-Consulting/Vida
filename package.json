{
  "name": "vida-mvp-nodb",
  "version": "0.5.0",
  "description": "ViDA e-invoicing MVP – JSON→UBL→PEPPOL",
  "type": "module",
  "main": "dist/src/server.js",
  "engines": {
    "node": ">=20.19.0 <21",
    "npm": ">=10"
  },
  "scripts": {
    "start": "node dist/src/server.js",
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "verify:node": "node scripts/verify-node.mjs",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "db:reset": "prisma migrate reset --force",
    "wait:api": "node scripts/wait-for-api.mjs",
    "smoke:health": "curl -fsS http://127.0.0.1:3001/healthz",
    "lint": "eslint . --max-warnings=0",
    "test": "vitest run",
    "test:ci": "vitest run --reporter=dot --silent",
    "test:scrada:mock": "vitest run tests/integration/scrada.sender.mock.spec.ts",
    "test:scrada:e2e": "SCRADA_RUN_E2E=true vitest run tests/e2e/scrada.e2e.spec.ts",
    "peppol:gen": "node --import tsx scripts/peppol-generate.mjs",
    "scrada:send": "pwsh ./tools/scrada-peppol/Send-PeppolUbl.ps1",
    "codex": "node scripts/codex.mjs",
    "history:list": "tsx src/cli/history-list.ts",
    "dlq:list": "tsx src/cli/dlq-list.ts",
    "dlq:retry": "tsx src/cli/dlq-retry.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "pdfkit": "^0.15.0",
    "ts-node": "^10.9.2",
    "xmlbuilder2": "^3.1.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/node": "^24.7.2",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "nock": "^14.0.0",
    "prisma": "^5.20.0",
    "supertest": "^7.1.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1",
    "undici": "^6.22.0",
    "vitest": "^3.2.4",
    "yaml": "^2.8.1"
  }
}
