{
  "name": "vida",
  "version": "0.5.0",
  "description": "ViDA multi-adapter monorepo",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20.19.0 <21",
    "npm": ">=10"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/*/*",
    "plugins/*"
  ],
  "scripts": {
    "start": "npm run start --workspace @vida/api",
    "dev": "npm run dev --workspace @vida/api",
    "build": "npm run build --workspace @vida/api",
    "typecheck": "npm run typecheck --workspace @vida/api",
    "verify:node": "npm run verify:node --workspace @vida/api",
    "prisma:generate": "npm run prisma:generate --workspace @vida/api",
    "prisma:migrate": "npm run prisma:migrate --workspace @vida/api",
    "db:reset": "npm run db:reset --workspace @vida/api",
    "wait:api": "npm run wait:api --workspace @vida/api",
    "smoke:health": "npm run smoke:health --workspace @vida/api",
    "lint": "npm run lint --workspace @vida/api",
    "test": "npm run test --workspace @vida/api",
    "test:ci": "npm run test:ci --workspace @vida/api",
    "peppol:gen": "npm run peppol:gen --workspace @vida/api",
    "codex": "npm run codex --workspace @vida/api",
    "history:list": "npm run history:list --workspace @vida/api",
    "dlq:list": "npm run dlq:list --workspace @vida/api",
    "dlq:retry": "npm run dlq:retry --workspace @vida/api"
  },
  "packageManager": "npm@10.8.2"
}
