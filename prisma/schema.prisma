// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"    // change to "postgresql" for prod later
  url      = env("DATABASE_URL")
}

model Invoice {
  id        String     @id
  number    String     @unique
  status    String     // "SENT" | "PAID"
  currency  String
  buyerName String
  buyerCountry String
  net       Decimal
  tax       Decimal
  gross     Decimal
  issuedAt  DateTime
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  lines     LineItem[]
  payments  Payment[]
}

model LineItem {
  id        String   @id
  invoiceId String
  name      String
  qty       Int
  price     Decimal

  invoice   Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
}

model Payment {
  id           String   @id
  invoiceId    String
  amount       Decimal
  paymentMethod String
  paidAt       DateTime
  createdAt    DateTime @default(now())

  invoice      Invoice  @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
}

model IdempotencyKey {
  key       String   @id
  scope     String   // "create" | "pay"
  objectId  String   // invoiceId (for create) OR paymentId/invoiceId for pay
  createdAt DateTime @default(now())
}
