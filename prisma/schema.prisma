// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"      // local dev; switch to "postgresql" later if needed
  url      = env("DATABASE_URL")
}

model Invoice {
  id           String   @id @default(cuid())
  number       String   @unique
  status       String             // "SENT" | "PAID"
  currency     String
  buyerName    String
  buyerCountry String
  vatRate      Decimal  @default(0)
  net          Decimal
  tax          Decimal
  gross        Decimal
  issuedAt     DateTime @default(now())   // <-- added
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  lines     LineItem[]
  payments  Payment[]
}

model LineItem {
  id        String  @id @default(cuid())
  invoiceId String
  name      String
  qty       Int
  price     Decimal

  invoice   Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
}

model Payment {
  id            String   @id @default(cuid())
  invoiceId     String
  amount        Decimal
  paymentMethod String
  paidAt        DateTime @default(now())

  invoice   Invoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
}

model IdempotencyKey {
  id        String   @id @default(cuid())
  scope     String   // "create" | "pay"
  key       String   @unique
  targetId  String
  createdAt DateTime @default(now())
}
